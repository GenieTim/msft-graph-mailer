{
    "name": "bernhardwebstudio/msft-graph-mailer",
    "description": "A mailer for Symfony to send mails using Microsoft Graph",
    "type": "library",
    "require": {
        "symfony/mailer": "^6.4|^7.0",
        "microsoft/kiota-authentication-phpleague": "^1.0",
        "microsoft/microsoft-graph": "^2.2"
    },
    "require-dev": {
        "symfony/http-client": "^6.4|^7.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BernhardWebstudio\\Mailer\\Bridge\\MsftGraphMailer\\": ""
        }
    },
    "authors": [
        {
            "name": "Tim Bernhard",
            "email": "tim@bernhard-webstudio.ch"
        }
    ],
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
